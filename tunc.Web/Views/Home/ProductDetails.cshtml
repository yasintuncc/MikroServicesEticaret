@model ProductDto

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea, #764ba2);">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg" style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">
            <div class="card-header bg-dark text-light text-center py-4">
                <h2>@Model.Name</h2>
                <h3 class="text-warning">@string.Format("{0:c}", Model.Price)</h3>
            </div>
            <div class="card-body text-white text-center">
                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;">
                <p class="text-secondary pt-3">@Html.Raw(Model.Description)</p>
                <span class="badge bg-primary text-white p-3">@Model.CategoryName</span>
                <div class="mt-3">
                    <input asp-for="Count" class="form-control text-center" placeholder="Quantity" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer bg-dark text-center py-3">
                <a asp-action="Index" class="btn btn-success btn-lg rounded-pill">Listeye Geri Dön</a>
                <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary btn-lg rounded-pill">Kart Ekle</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}