@model IEnumerable<ProductDto>

<head>
    <style>
        .product-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            background-color: #f8f9fa;
        }
    </style>
</head>
<div class="container-fluid  d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea, #764ba2);">
    <div class="col-md-10">
        <div class="card border-0 shadow-lg" style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">
            <div class="card-body p-5 text-center text-white">
                <h3 class="fw-bold mb-3">Ürün Listesi</h3>
                <p class="text-light mb-4"> En Yeni Koleksiyonumuzu Keşfedin </p>
                <hr class="border-light" />
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-12 col-md-6 col-lg-4 mb-4">
                            <div class="card border-0 shadow-lg bg-transparent text-white" style="backdrop-filter: blur(15px); border-radius: 15px;">
                                <img src="@product.ImageUrl" class="card-img-top rounded-top product-image">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@Html.Raw(product.Description)</p>
                                    <span class="badge bg-warning text-dark p-2">@product.CategoryName</span>
                                    <h4 class="text-warning mt-2">@string.Format("{0:c}", product.Price)</h4>
                                    <a asp-action="ProductDetails" asp-route-productid="@product.ProductId" class="btn btn-light btn-sm rounded-pill shadow-sm"
                                       style="background: linear-gradient(45deg, #ff9a9e, #fad0c4); border: none; transition: 0.3s;">
                                        Detaylar
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>