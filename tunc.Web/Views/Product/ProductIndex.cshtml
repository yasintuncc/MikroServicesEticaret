@using tunc.Web.Models
@model IEnumerable<ProductDto>

<div class="container-fluid d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #667eea, #764ba2);">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 shadow-lg"
             style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">
            <div class="card-header text-center text-white py-4"
                 style="background: linear-gradient(45deg, #ff9a9e, #fad0c4); border-radius: 20px 20px 0 0;">
                <h2 class="fw-bold">ÜRÜNLER LİSTESİ</h2>
            </div>

            <div class="card-body p-4">
                <div class="d-flex justify-content-between mb-3">
                    <div></div>
                    <a asp-action="ProductCreate"
                       class="btn btn-outline-light btn-lg rounded-pill fw-bold shadow-sm"
                       style="background: rgba(255, 255, 255, 0.2); transition: 0.3s;">
                        <i class="bi bi-plus-square"></i>Yeni Ürün Oluştur
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover text-white">
                        <thead>
                            <tr class="text-uppercase" style="border-bottom: 2px solid white;">
                                <th>İsim</th>
                                <th>Kategori İsmi</th>
                                <th>Fiyat</th>
                                <th class="text-center">Eylemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
                                    <td>@item.Name</td>
                                    <td>@item.CategoryName</td>
                                    <td>@((item.Price).ToString("c"))</td>
                                    <td class="text-center">
                                        <a class="btn btn-success rounded-pill shadow-sm me-2"
                                           asp-action="ProductEdit" asp-route-productId="@item.ProductId"
                                           style="transition: 0.3s;">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a class="btn btn-danger rounded-pill shadow-sm"
                                           asp-action="ProductDelete" asp-route-productId="@item.ProductId"
                                           style="transition: 0.3s;">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>