@model ProductDto



<div class="container-fluid vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #667eea, #764ba2);">

    <div class="col-md-6 col-lg-5">

        <div class="card border-0 shadow-lg"
             style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">

            <div class="card-body p-5 text-center">

                <h2 class="fw-bold text-white mb-3"> Ürünü Düzenle </h2>



                <form asp-action="ProductEdit" enctype="multipart/form-data" method="post">

                    <input hidden asp-for="ProductId" />



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="Name" class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="Name" class="text-white">İsim</label>

                        </div>

                        <span asp-validation-for="Name" class="text-danger small"></span>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="CategoryName" class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="CategoryName" class="text-white">kategori İsmi</label>

                        </div>

                        <span asp-validation-for="CategoryName" class="text-danger small"></span>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <textarea asp-for="Description" class="form-control rounded border-0 shadow-sm"
                                      rows="3" style="background: rgba(255, 255, 255, 0.2); color: white;"></textarea>

                            <label asp-for="Description" class="text-white">Tanım</label>

                        </div>

                        <span asp-validation-for="Description" class="text-danger small"></span>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="Price" class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="Price" class="text-white">Fiyat</label>

                        </div>

                        <span asp-validation-for="Price" class="text-danger small"></span>

                    </div>



                    <div class="mb-4">

                        <div class="form-floating">

                            <input type="file" asp-for="Image" class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="Image" class="text-white">
                                Resim Yükle
                            </label>

                        </div>

                        <input asp-for="ImageUrl" hidden />

                        <input asp-for="ImageLocalPath" hidden />

                        <span asp-validation-for="Image" class="text-danger small"></span>

                    </div>



                    <div class="d-flex justify-content-between">

                        <a asp-action="ProductIndex" class="btn btn-light btn-lg rounded-pill fw-bold shadow-sm"
                           style="background: linear-gradient(45deg, #ff9a9e, #fad0c4); border: none; transition: 0.3s;">

                            İptal Et

                        </a>

                        <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm"
                                style="transition: 0.3s;">

                            Update

                        </button>

                    </div>

                </form>

            </div>

        </div>

    </div>

</div>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}