@model ProductDto



<div class="container-fluid vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #667eea, #764ba2);">

    <div class="col-md-6 col-lg-5">

        <div class="card border-0 shadow-lg"
             style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">

            <div class="card-body p-5 text-center">

                <h2 class="fw-bold text-white mb-3">Ürün Sil</h2>

                <p class="text-light mb-4">Bu ürünü silmek istediğinizden emin misiniz?</p>



                <form asp-action="ProductDelete" method="post">

                    <input hidden asp-for="ProductId" />



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="Name" disabled class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="Name" class="text-white">İsim</label>

                        </div>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="CategoryName" disabled class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="CategoryName" class="text-white">Kategori İsmi</label>

                        </div>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <textarea asp-for="Description" disabled class="form-control rounded border-0 shadow-sm"
                                      rows="3" style="background: rgba(255, 255, 255, 0.2); color: white;"></textarea>

                            <label asp-for="Description" class="text-white">Tanım</label>

                        </div>

                    </div>



                    <div class="mb-3">

                        <div class="form-floating">

                            <input asp-for="Price" disabled class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="Price" class="text-white">Fiyat</label>

                        </div>

                    </div>



                    <div class="mb-4">

                        <div class="form-floating">

                            <input asp-for="ImageUrl" disabled class="form-control rounded-pill border-0 shadow-sm"
                                   style="background: rgba(255, 255, 255, 0.2); color: white;">

                            <label asp-for="ImageUrl" class="text-white">Resim Yolu</label>

                        </div>

                    </div>



                    <div class="d-flex justify-content-between">

                        <a asp-action="ProductIndex" class="btn btn-light btn-lg rounded-pill fw-bold shadow-sm"
                           style="background: linear-gradient(45deg, #ff9a9e, #fad0c4); border: none; transition: 0.3s;">

                            İptal et

                        </a>

                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm"
                                style="transition: 0.3s;">

                            Sil

                        </button>

                    </div>

                </form>

            </div>

        </div>

    </div>

</div>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}