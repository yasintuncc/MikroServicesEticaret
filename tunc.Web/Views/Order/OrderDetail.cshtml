@model OrderHeaderDto
@using tunc.Web.Utility

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea, #764ba2);">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg" style="backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); border-radius: 20px; overflow: hidden;">
            <div class="card-body p-5 text-center">
                <h2 class="fw-bold text-white mb-3">Order Summary</h2>
                <p class="text-light mb-4">View your order details</p>

                <form method="post">
                    <div class="mb-3">
                        <input asp-for="OrderHeaderId" hidden />
                    </div>

                    <div class="mb-4">
                        <div class="row">
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Name</div>
                                    <div class="col-6">
                                        <input asp-for="Name" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Phone</div>
                                    <div class="col-6">
                                        <input asp-for="Phone" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row my-2">
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Email</div>
                                    <div class="col-6">
                                        <input asp-for="Email" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Order Date</div>
                                    <div class="col-6">
                                        <input value="@Model.OrderTime.ToShortDateString()" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (User.IsInRole(SD.RoleAdmin))
                    {
                        <div class="row my-2">
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Session ID</div>
                                    <div class="col-6">
                                        <input asp-for="StripeSessionId" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row my-2">
                                    <div class="col-6 text-white">Payment Intent ID</div>
                                    <div class="col-6">
                                        <input asp-for="PaymentIntentId" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row my-2">
                        <div class="col-6">
                            <div class="row my-2">
                                <div class="col-6 text-white">Order Status</div>
                                <div class="col-6">
                                    <input asp-for="Status" readonly class="form-control rounded-pill" style="background: rgba(255, 255, 255, 0.2); color: white;">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-light btn-lg rounded-pill w-100 fw-bold shadow-sm"
                                style="background: linear-gradient(45deg, #ff9a9e, #fad0c4); border: none; transition: 0.3s;">
                            Update Status
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>